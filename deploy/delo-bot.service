[Unit]
Description=Delo-Bot FastAPI Application
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/delo-bot/backend
Environment="PATH=/opt/delo-bot/venv/bin"
EnvironmentFile=/opt/delo-bot/backend/.env
ExecStart=/opt/delo-bot/venv/bin/uvicorn app.main:app --host 127.0.0.1 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
